type User {
    id: ID!
    name: String!
    email: String!
    phone: String!
}

type Tweet {
    id: ID!
    title: String!
    message: String!
    author: User!
    postingDate: String!
    validityLengthInDays: Int!
    feedback: [Feedback]!
}

type Feedback{
    author: User!
    message: String!
}

type Query {
    searchTweets(query: String!): [Tweet]
    getUser(id: ID!): User
    getTweet(id: ID!): Tweet
}

type Mutation {
    createUser(id: String!, name: String!, email: String!, phone: String!): User
    postTweet(title: String!, message: String!, authorId: ID!, validityLengthInDays: Int!): Tweet
    addFeedback(tweetId: ID!, authorId: ID! , message: String!): Tweet
}
